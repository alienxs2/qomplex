# Development Dockerfile with hot reload support
FROM node:20-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package.json package-lock.json* ./
COPY frontend/package.json ./frontend/
COPY backend/package.json ./backend/
COPY shared/package.json ./shared/

# Install all dependencies including concurrently
RUN npm ci && npm install -g concurrently

# Copy source files
COPY . .

# Build shared package
RUN npm run build --workspace=shared

# Expose ports for backend and frontend dev server
EXPOSE 3000 5173

# Start both frontend and backend development servers in parallel
CMD ["concurrently", "--kill-others", "--names", "BACK,FRONT", "-c", "blue,green", "npm run dev --workspace=backend", "npm run dev --workspace=frontend -- --host"]
