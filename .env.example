# Qomplex Environment Configuration
# Copy this file to .env and update values as needed

# ===================
# Database Configuration
# ===================
# PostgreSQL password (used by docker-compose for the database container)
POSTGRES_PASSWORD=qomplex_dev_password

# Database connection URL (format: postgresql://user:password@host:port/database)
DATABASE_URL=postgresql://qomplex:qomplex_dev_password@localhost:5432/qomplex

# Database connection pool settings (optional, defaults shown)
# DB_POOL_MAX=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=5000

# ===================
# Authentication
# ===================
# JWT secret for signing tokens (minimum 32 characters, CHANGE IN PRODUCTION!)
JWT_SECRET=change_this_in_production_min_32_characters_long

# ===================
# Server Configuration
# ===================
# Environment mode (development, production, test)
NODE_ENV=development

# Server port for the backend API
PORT=3000

# CORS allowed origins (comma-separated list, optional)
# Default: http://localhost:5173
# CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Log level (optional, defaults to 'debug' in dev, 'info' in production)
# Options: trace, debug, info, warn, error, fatal
# LOG_LEVEL=debug

# ===================
# Claude CLI Configuration
# ===================
# Timeout for CLI operations in milliseconds (default: 10 minutes / 600000ms)
CLAUDE_CLI_TIMEOUT_MS=600000

# ===================
# Frontend Configuration (for Vite)
# ===================
# API base URL for frontend HTTP requests
VITE_API_URL=http://localhost:3000

# WebSocket URL for real-time chat
VITE_WS_URL=ws://localhost:3000
